# Environment Configuration for API Client

# Copy this to your .env.local file and update the values

# ================================
# API Configuration
# ================================

# Your backend API base URL (required)
# KonthoKosh Railway Backend
NEXT_PUBLIC_BACKEND_URL=https://konthokosh.up.railway.app

# Optional: API timeout in milliseconds (default: 30000)
NEXT_PUBLIC_API_TIMEOUT=30000

# Optional: API version header
NEXT_PUBLIC_API_VERSION=1.0

# ================================
# Clerk Configuration (if not already set)
# ================================

# Your Clerk publishable key
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...

# Your Clerk secret key (server-side only)
CLERK_SECRET_KEY=sk_test_...

# Clerk JWT template (optional)
CLERK_JWT_TEMPLATE=kontho-kosh-jwt

# ================================
# Development Configuration
# ================================

# Enable API request logging in development
NEXT_PUBLIC_API_DEBUG=true

# Local development backend URL (if different)
NEXT_PUBLIC_LOCAL_API_URL=http://localhost:3001/api

# ================================
# Production Configuration
# ================================

# Production backend URL
NEXT_PUBLIC_PROD_API_URL=https://prod-api.yourapp.com/v1


NEXT_PUBLIC_BACKEND_URL=https://konthokosh.up.railway.app